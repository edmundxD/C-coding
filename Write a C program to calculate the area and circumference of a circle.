#include <stdio.h>
int main(){
    float R;
    float Area;
    float circumference;
    printf("Enter the radius of the circle");
    scanf("%f",&R);
    const float PI=3.14159;
    circumference=2*PI*R;
    Area=PI*R*R;
    printf("The Circumference of the Circle is %f \n",circumference);
    printf("The Area of the circle is %f",Area);
    return 0;
}
